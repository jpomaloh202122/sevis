# SEVIS Pass Integration Environment Variables
# Copy these to your .env.local file and replace with your actual SEVIS Pass credentials

# SEVIS Pass OAuth Configuration
NEXT_PUBLIC_SEVIS_PASS_CLIENT_ID=your_sevis_pass_client_id_here
SEVIS_PASS_CLIENT_SECRET=your_sevis_pass_client_secret_here

# SEVIS Pass API URLs
SEVIS_PASS_API_URL=https://sevispass.netlify.app/api
SEVIS_PASS_AUTH_URL=https://sevispass.netlify.app/auth

# OAuth Redirect URIs (update for your domains)
SEVIS_PASS_REDIRECT_URI=http://localhost:3000/auth/sevis-pass/callback
SEVIS_PASS_REDIRECT_URI_PRODUCTION=https://yourdomain.com/auth/sevis-pass/callback

# Optional: SEVIS Pass Integration Settings
SEVIS_PASS_SCOPE=identity email profile government_services
SEVIS_PASS_RESPONSE_TYPE=code
SEVIS_PASS_PROMPT=consent

# Security Settings (Optional - defaults will be used)
SEVIS_PASS_TOKEN_EXPIRY=3600
SEVIS_PASS_RATE_LIMIT_MAX=5
SEVIS_PASS_RATE_LIMIT_WINDOW=900000

# Development/Testing
SEVIS_PASS_DEMO_MODE=false
SEVIS_PASS_DEBUG_LOGGING=true