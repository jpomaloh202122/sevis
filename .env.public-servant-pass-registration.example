# Public Servant Pass Registration Service Configuration
# Copy relevant variables to your .env.local file

# Registration Service Settings
PUBLIC_SERVANT_PASS_ENABLED=true
PUBLIC_SERVANT_PASS_REGISTRATION_ENABLED=true

# Government HR System Integration
GOV_HR_SYSTEM_API_URL=https://hr.gov.pg/api
GOV_HR_SYSTEM_API_KEY=your_hr_system_api_key_here

# Security Clearance System Integration
SECURITY_CLEARANCE_API_URL=https://security.gov.pg/api
SECURITY_CLEARANCE_API_KEY=your_security_clearance_api_key_here

# Background Check Service Integration
BACKGROUND_CHECK_API_URL=https://background.gov.pg/api
BACKGROUND_CHECK_API_KEY=your_background_check_api_key_here

# Department Notification Settings
DEPARTMENT_NOTIFICATION_EMAIL=pmd@gov.pg
SECURITY_NOTIFICATION_EMAIL=security@gov.pg

# Processing Settings
DEFAULT_PROCESSING_DAYS=14
BACKGROUND_CHECK_PROCESSING_DAYS=30
AUTO_APPROVE_BASIC_CLEARANCE=false

# Validation Settings
STRICT_EMAIL_DOMAIN_VALIDATION=true
ALLOWED_GOV_DOMAINS=gov.pg,parliament.gov.pg,treasury.gov.pg,finance.gov.pg,health.gov.pg,education.gov.pg

# Mock Database Settings (Development Only)
USE_MOCK_GOV_DATABASE=true
MOCK_EMPLOYEE_VALIDATION=true

# Application Settings
MAX_APPLICATIONS_PER_PS_ID=1
ENABLE_DUPLICATE_PS_ID_CHECK=true

# Security Settings
ENABLE_APPLICATION_RATE_LIMITING=true
MAX_APPLICATIONS_PER_IP_PER_DAY=5

# Admin Dashboard Settings
ENABLE_PS_PASS_ADMIN_DASHBOARD=true
ADMIN_NOTIFICATION_ON_NEW_APPLICATION=true

# Integration Testing
PS_PASS_TEST_MODE=false
TEST_PS_ID_PREFIX=TEST-

# Logging and Monitoring
LOG_APPLICATION_SUBMISSIONS=true
LOG_EMPLOYEE_VALIDATIONS=true
LOG_SECURITY_EVENTS=true